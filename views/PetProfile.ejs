<%-include("partials/header")%>


<section id="title" class="colored-section  p-4 justify-content-center space">
    <div class="container-fluid">
        <!-- Nav Bar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-gradient ">
            <a class="navbar-brand" href="/">Pet<span class="adoption">Adoption<span></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">

                    <li class="nav-item active">
                        <a class="nav-link" href="/showPets">Back To Pets</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/add_pets">Rehome</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>

                </ul>
            </div>
        </nav>


        <!-- Title -->


    </div>

</section class="pet">

<% pets.forEach(function(pet){ %>
<% if(name==pet._id){%>

<div class="userphoto">
    <img src="<%=pet.pet_image %>" class="pet-profile justify-content-center" alt="User Photo Here">
</div>
<hr>
<div id="Info">
    Name: <h2><%=pet.petname %></h2>
    <hr>
    Breed: <%=pet.breed %>
    <hr>
    Color: <%=pet.color%>
    <hr>
    Age: <%=pet.petage %> years
    <hr>
    Owner Email: <%= pet.owner_email %>
    <hr>
    Owner PhoneNo: <%=pet.phone %>
    <hr>
    <div class="row justify-content-center ">
        <div class="col-lg-6">
            <form action="" method="POST">
                <input type="hidden" name="email" value="<%= pet.owner_email %>">
                <input type="hidden" name="name" value="<%=pet.petname %>">

                <button type="submit" class="btn btn-dark btn-lg button1 j">Adopt</button>

            </form>

        </div>

    </div>
</div>

</div>
<% }%>
<% }); %>
</section>
<%-include("partials/footer")%>