<%-include("partials/header")%>

<section id="title" class="colored-section  p-4 justify-content-center space">
    <div class="container-fluid">
        <!-- Nav Bar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-gradient ">
            <a class="navbar-brand" href="/">Pet<span class="adoption">Adoption<span></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">

                    <li class="nav-item active">
                        <a class="nav-link" href="/showPets">Back To Pets</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/add_pets">Rehome</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>

                </ul>
            </div>
        </nav>


        <!-- Title -->


    </div>
    <h2><%= quote.text %></h2>
    <h3>- <%= quote.author %></h3>




</section>

<div class="container center">
    <div class="userphot">
        <img src="<%=users.profile_image %>" class="user-profile" width="170px" height="250px" alt="User Photo Here">
    </div>
</div>
<hr>

<div id="Name">
    Name: <%=users.name %>
    </>
    <hr>
    <div id="Email">
        Email: <%=users.email %>
    </div>
    <hr>
    <div id="Email">
        Phone_No:<%= users.phone%>
    </div>
    <div id="Email">
        <a href="/edit"><button type="button" class="btn btn-dark btn-lg button1">Edit</button></a>
    </div>
</div>





<section id="pricing" class="white-section">
    <h2 class="heading1">Your Pets</h2>
    <p></p>
    <div class="row">

        <% pets.forEach(function(pet){ %>
        <div class="pricing-component col-lg-4 col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3><%=pet.petname %></h3>
                </div>
                <div class="card-body">
                    <img class="dog-image" src="<%=pet.pet_image %>" alt="dog-profile">

                    <p>breed: <%= pet.breed %></p>
                    <p>Age: <%= pet.petage %></p>

                    <form action="/showPets/<%= pet._id %>">
                        <button type="submit" class="btn btn-dark btn-lg button2">Profile</button>
                    </form>
                    <br>
                    <form action="/delete" method="POST">
                        <input type="hidden" name="id" value="<%=pet._id%>">
                        <button type="submit" class="btn btn-dark btn-lg button2">Adopted</button>
                    </form>
                </div>
            </div>
        </div>
        <% }); %>
</section>



<%-include("partials/footer")%>